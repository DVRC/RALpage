HERE

cat $0 >> /tmp/${MSG}.leader

Mail -s "$MSG follows" $DEST < /tmp/${MSG}.leader
rm -rf /tmp/${MSG}.leader

uuencode $MSG.Z $MSG.Z > /tmp/${MSG}.uu
split /tmp/${MSG}.uu /tmp/${MSG}-uu
for j in /tmp/${MSG}-uu*
do
	Mail -s `basename $j` $DEST < $j
	echo $j
done

rm -rf /tmp/${MSG}-uu* /tmp/${MSG}.uu

